{
  "manifest_version": 3,
  "name": "Xads Remover",
  "version": "1.1",
  "description": "Customize your X.com browsing experience with ad-free simplicity using CSS.",
  "host_permissions": [
    "*://x.com/*",
    "*://twitter.com/*"
  ],  
  "author": ["x.com/ekbyte"],
  "content_scripts": [
    {
        "matches": [
            "*://x.com/*",
            "*://twitter.com/*"
        ],  
      "css": ["styles.css"]
    }
  ],  
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  }
}
